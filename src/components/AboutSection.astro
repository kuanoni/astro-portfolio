---
import '@styles/components/AboutSection.scss';
---

<section class='about'>
	<h2 class='title'>About me</h2>
</section>

<script>
	import observerManager from '../utils/ObserverManager';

	observerManager.subscribe('.about h2.title', (i, e) => {
		if (i.inside && !i.partialAbove && !i.partialBelow) e.classList.add('slide-in');
	});
</script>
