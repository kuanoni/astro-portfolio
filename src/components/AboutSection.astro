<script>
	import EdgesIoManager from 'src/utils/EdgesIoManager';
	import MiddleIoManager from 'src/utils/MiddleIoManager';

	const section = document.querySelector('section.about');
	if (section) {
		MiddleIoManager.subscribe('.about .header', (f, e) => {
			if (f.middle || f.aboveMiddle) section.classList.add('slide-in');
