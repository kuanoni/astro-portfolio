---
import { Image } from '@astrojs/image/components';
import LinkButton from '@components/blocks/LinkButton.astro';
import Clouds from '@components/decor/Clouds.astro';
import '@styles/components/SectionHero.scss';
import profile from '@images/profile.webp';
import boat from '@images/svg/boat.svg';
---

<section class='hero'>
	<div class='header'>
		<h1 class='title'>
			Hi, my name is
			<span>Kainoa Araiza K.</span>
		</h1>
		<h3 class='subtitle'>
			I'm a highly motivated <strong>front-end developer</strong> from
			<span> Washington, US.</span>
		</h3>
	</div>
	<div class='picture'>
		<div class='border'></div>
		<div class='picture__wrapper'>
			<Image src={profile} width={416} height={416} alt='my face' />
		</div>
	</div>
	<div class='btns'>
		<LinkButton href='#' class='work'>See my work</LinkButton>
		<LinkButton href='#' class='contact'>Contact me</LinkButton>
	</div>
	<div class='decor-wrapper' aria-hidden='true'>
		<Clouds amount={4} />
		<div class='waves light-waves'></div>
		<div class='boat'>
			<img src={boat} alt='' />
		</div>
		<div class='waves dark-waves'></div>
	</div>
</section>
