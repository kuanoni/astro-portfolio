<script>
	import EdgesIoManager from 'src/utils/EdgesIoManager';
	import MiddleIoManager from 'src/utils/MiddleIoManager';

	EdgesIoManager.subscribe('section.about .fish-school', (f, e) => {
		if (f.inside || f.partialAbove || f.partialBelow) e.classList.remove('stay-still');
		if (f.below) e.classList.add('stay-still');
	});

	MiddleIoManager.subscribe('section.about .body', (f, e) => {
		if (f.middle || f.aboveMiddle) {
			e.classList.add('fade-in');
			e.classList.remove('fade-out');
		} else {
			e.classList.remove('fade-in');
			e.classList.add('fade-out');
		}
	});
</script>
