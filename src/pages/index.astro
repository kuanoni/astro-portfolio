---
import { SITE_TITLE, SITE_DESCRIPTION } from 'src/config';
import BaseHead from '@components/BaseHead.astro';
import Header from '@components/Header.astro';
import HeroSection from '@components/SectionHero.astro';
import AboutSection from '@components/SectionAbout.astro';
import '@styles/pages/index.scss';
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<div id='home'></div>
		<Header title={SITE_TITLE} />
		<main>
			<HeroSection />
			<AboutSection />
			<section class='projects'></section>
		</main>

		<script>
			import EdgesIoManager from '@utils/EdgesIoManager';

			const header = document.querySelector('header');

			if (header)
				EdgesIoManager.subscribe('.hero', (f) => {
					if (f.above) header.classList.add('submerged');
					else header.classList.remove('submerged');
				});
		</script>
	</body>
</html>
